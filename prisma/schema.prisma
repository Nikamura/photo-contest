generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id    String  @id @default(uuid())
  email String  @unique
  name  String?
}

model Contest {
  id   String @id @default(uuid())
  name String
}

model ContestItem {
  id   String @id @default(uuid())
  file String
}

model FileUpload {
  id                 String   @id @default(uuid())
  fileName           String
  bucketKey          String?
  thumbnailBucketKey String?
  bucketName         String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
